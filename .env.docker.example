# Docker Environment Configuration for Rowt UI
# Copy this file to .env and update the values

# Required: Your Rowt server API endpoint
ROWT_API_ENDPOINT=https://your-rowt-server.com

# Build mode: development or production
BUILD_MODE=production
NODE_ENV=production

# Port configuration
DEV_PORT=8080     # Host port for development mode
PROD_PORT=3000    # Host port for production mode

# Traefik configuration (optional)
TRAEFIK_ENABLE=false
TRAEFIK_HOST=rowt-ui.localhost
